{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col">
                <h1>Sign up</h1>

                {{ form_start(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>Identity</legend>
                        {{ form_row(registrationForm.lastName) }}
                        {{ form_row(registrationForm.firstName) }}
                        {{ form_row(registrationForm.email) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend>Address</legend>
                        {{ form_row(registrationForm.address) }}
                        {{ form_row(registrationForm.streetNumber) }}
                        {{ form_row(registrationForm.complement) }}
                        {{ form_row(registrationForm.postalCode) }}
                        {# {{ form_row(registrationForm.neighborhood) }} #}
                        {{ form_row(registrationForm.city) }}
                        {{ form_row(registrationForm.state) }}
                        {{ form_row(registrationForm.country) }}
                    </fieldset>
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {# {{ form_row(registrationForm.RGPDConsent) }} #}

                    <button type="submit" class="btn btn-primary btn-lg my-3">Sign up</button>
                    <a href="{{ path('app_login') }}" class="btn btn-secondary">Login</a>
                {{ form_end(registrationForm) }}            
            </div>
        </div>
    </section>

{% endblock %}
