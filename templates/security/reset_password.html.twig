{% extends 'base.html.twig' %}

{% block title %}Reset User Password{% endblock %}

{% block body %}
<section class="container my-3">
    <div class="row">
        <div class="col">
            <h1>Password reset</h1>
            {{ form_start(passForm) }}
                {{ form_row(passForm.password) }}
                <button type="submit" class="btn btn-primary">Send</button>
            {{ form_end(passForm) }}
        </div>
    </div>
</section>

{% endblock %}
